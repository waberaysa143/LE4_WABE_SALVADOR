// Online C compiler to run C program online
#include <stdio.h>
int main() {
    char name[50], section[30];
    float grade1, grade2, grade3, grade4, average;
    char remarks[20];

    printf("\nEnter your full name: ");
    fgets(name, sizeof(name), stdin);

    printf("\nEnter section: ");
    fgets(section, sizeof(section), stdin);

    // Input 4 quarter grades
    
    printf("\nEnter your first quarter grade: ");
    scanf("%f", &grade1);
    
    printf("\nEnter your second quarter grade: ");
    scanf("%f", &grade2);

    printf("\nEnter your third quarter grade: ");
    scanf("%f", &grade3);
    
    printf("\nEnter your fourth quarter grade: ");
    scanf("%f", &grade4);
    
    // Compute average
    average = (grade1 + grade2 + grade3 + grade4) / 4.0 ;
    
    printf("Student: %s", name);
    printf("Section: %s", section);
    printf("Average: %.2f\n", average);
    
    if (average >= 90 && average <= 100) {
        printf("remarks, Outstanding\n");
    }else if (average >= 85 && average <= 89){
        printf("remarks, Very Satisfactory\n");
    }else if (average >= 80 && average <= 84){
        printf("remarks, Satisfactory\n");
    }else if (average >= 75 && average <= 79){
        printf("remarks, fair\n");
    }else{
         printf("remarks: Failed \n");
    }
    
return 0;

}